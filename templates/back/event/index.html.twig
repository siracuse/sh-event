{% extends 'baseAdmin.html.twig' %}


{% block body %}
    <h1>Les événements</h1>
    <p><a href="{{ path('admin.event.new') }}">Ajouter</a></p>

    <table class="table">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
        </thead>

        <tbody>
        {% for event in events %}

            <tr>
                <td>{{ event.title }}</td>
                <td>{{ event.date |  date('d.m.Y') }}</td>
                <td class="action">
                    <a href="{{ path('admin.event.edit', {id:event.id}) }}">
                        <img class="icon-edit" src="{{ asset('icon/edit.svg') }}" alt="">
                    </a>
                    <a href="{{ path('admin.event.delete', {id:event.id}) }}">
                        <img class="icon-delete" src="{{ asset('icon/delete.svg') }}" alt="">
                    </a>
                    
                </td>
            </tr>

        {% endfor %}
        </tbody>

    </table>
{% endblock %}